{
  "name": "vscode-loader",
  "version": "1.0.0",
  "description": "An universal AMD Loader",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "watch1": "cd src && cd core && tsc -w",
    "watch2": "tsc -w",
    "compile": "tsc",
    "compile-all": "tsc -p src/core/tsconfig.json && tsc",
    "watch-all": "tsc -b -w src/core .",
    "test": "node ./tests/run-tests.js",
    "simpleserver": "http-server -p 9999"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/vscode-loader.git"
  },
  "author": "Microsoft Corporation",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Microsoft/vscode-loader/issues"
  },
  "homepage": "https://github.com/Microsoft/vscode-loader#readme",
  "devDependencies": {
    "http-server": "^0.11.1",
    "typescript": "^3.5.3"
  }
}